<header class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse-1">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Shoot Edit Publish', root_path, class: 'navbar-brand', id: 'logo' %>
    </div>
    <div class="collapse navbar-collapse navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right nav-controls">
        <li class="<%= 'active' if current_page?(root_path) %>">
        <%= link_to 'Home', root_path %>
        </li> 

        <% if user_signed_in? %>

        <li class="<%= 'active' if current_page?(users_path) %>">
        <%= link_to 'Users', users_path %>
        </li>

        <li class="<%= 'active' if current_page?(user_path(current_user)) %>">
        <%= link_to 'Me', user_path(current_user) %>
        </li>

        <li class="<%= 'active' if current_page?(destroy_user_session_path) %>">
        <%= link_to 'Sign out', destroy_user_session_path, method: "delete" %>
        </li>

        <% else %>
        <li class="<%= 'active' if current_page?(new_user_session_path)%>">
        <%= link_to 'Sign in', new_user_session_path %>
        </li>
        <li class="<%= 'active' if current_page?(new_user_registration_path)%>">
        <%= link_to 'Sign up', new_user_registration_path %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
